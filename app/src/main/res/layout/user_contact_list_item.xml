<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/list_item_padding">

   <androidx.cardview.widget.CardView
       android:id="@+id/container_iv_user_contact_image_list_item"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:cardCornerRadius="250dp"
       android:transitionName="animate_transition_image">

    <ImageView
        android:id="@+id/iv_user_contact_image_list_item"
        android:layout_width="@dimen/List_Image_Size"
        android:layout_height="@dimen/List_Image_Size"
        android:layout_alignParentStart="true"
        android:foreground="@drawable/ic_launcher_foreground"
        android:background="@drawable/ic_launcher_background"/>

   </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_user_contact_name_list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/container_iv_user_contact_image_list_item"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/medium_margin"
        android:textSize="@dimen/list_item_text_size"
        android:textColor="@color/list_item_text_color_black"
        />

</RelativeLayout>